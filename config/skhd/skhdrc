# Change window focus
alt - tab : yabai -m window --focus next || yabai -m window --focus first

# Rotate windows
alt - left  : yabai -m space --rotate 270 
alt - right : yabai -m space --rotate 90

# Resize windows
alt + shift - h : yabai -m window --resize left:-20:0 || yabai -m window --resize right:-20:0 
alt + shift - j : yabai -m window --resize top:0:20   || yabai -m window --resize bottom:0:20
alt + shift - k : yabai -m window --resize top:0:-20  || yabai -m window --resize bottom:0:-20
alt + shift - l : yabai -m window --resize left:20:0  || yabai -m window --resize right:20:0


# Mirror windows
ctrl + alt - h : yabai -m space --mirror y-axis
ctrl + alt - j : yabai -m space --mirror x-axis

# Swap windows
ctrl + shift - h : yabai -m window --swap west
ctrl + shift - j : yabai -m window --swap south
ctrl + shift - k : yabai -m window --swap north
ctrl + shift - l : yabai -m window --swap east

# Toggle window float
ctrl + shift - z : yabai -m window --toggle float

# Reset the windows size
ctrl + shift -r : yabai -m space --balance

