""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""
" Setup staus bar
" 
""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""
set laststatus=2
" set statusline=
set statusline=%1*\ 
set statusline+=%{%StatuslineMode()%}
set statusline+=%1*
" Middle Section
set statusline+=%=
set statusline+=%7*%M%1*\ %f
" Right section
set statusline+=%=
set statusline+=[buff\ %n]\ %LL\ 
set statusline+=%4*%5*curs\ %l:%c%4*
set statusline+=%1*\ 

function! StatuslineMode()
  let l:mode=mode()
  if l:mode==#"n"
    " return "NORMAL"
    return "%2*%3*NORMAL%2*"
  elseif l:mode==?"v"
    " return "VISUAL"
    return "%#Statement#%#Search#VISUAL%#Statement#"
  elseif l:mode==#"i"
    return "%4*%5*INSERT%4*"
  elseif l:mode==#"R"
    return "%8*%9*REPLACE%8*"
  elseif l:mode==?"s"
    return "SELECT"
  elseif l:mode==#"t"
    return "TERMINAL"
  elseif l:mode==#"c"
    return "COMMAND"
  elseif l:mode==#"!"
    return "SHELL"
  endif
endfunction


